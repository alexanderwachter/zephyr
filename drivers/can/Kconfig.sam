# SAM CAN configuration options

DT_COMPAT_ATMEL_MCAN := atmel,mcan;

config CAN_SAM
	bool
	default $(dt_compat_enabled,$(DT_COMPAT_ATMEL_MCAN))
	select CAN_MCAN

if CAN_SAM

config CAN_CKDIV
	int "Clock divider"
	range 0 255
	default 0
	depends on CAN_SAM
	help
	  Clock divider for the MCAN core clock.

endif #CAN_SAM